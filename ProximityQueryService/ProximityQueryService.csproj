<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netcoreapp3.1</TargetFramework>
        <LangVersion>latest</LangVersion>
        <PackageId>VerdantSparks.ProximityQueryService</PackageId>
        <Version>1.0.3</Version>
        <Authors>Ferry To</Authors>
        <Company>VerdantSparks</Company>
        <PackageDescription>
            This package enable your application to perform proximity query against your data.
            Currently support MongoDB, more to come in future.
        </PackageDescription>
        <RepositoryUrl>https://github.com/VerdantSparks/ProximityQueryService</RepositoryUrl>
        <RootNamespace>ProximityQueryService</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" Version="3.1.4" />
      <PackageReference Include="MongoDB.Driver" Version="2.10.4" />
    </ItemGroup>

</Project>
